<link rel="stylesheet" href="/styles/navbar.css">
<link rel="stylesheet" href="/styles/createPost.css">

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="header">New Post</h1>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-center">
            <form id="newPost" method="post" action="/api/newpost">
                <div class="form-group">
                    <label for="breed" class="form-label">Breed</label>
                    <select name="breed" class="selector">
                        <option value="golden doodle" class="option-style">Golden Doodle</option>
                        <option value="bulldog" class="option-style">Bulldog</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="post_type" class="form-label">Post Type</label>
                    <select name="post_type" class="selector">
                        <option value="Dog Post" class="option-style">Dog Post</option>
                        <option value="Meet Up" class="option-style">Meet Up</option>
                    </select>
                </div>

                <br />

                <div class="form-group">
                    <textarea class="post-text" name="text" rows="8" cols="40" placeholder="Type your post here!"></textarea>
                </div>

                <input class="btn btn-custom newPostSubmit" type="submit" value="Post" />
            </form>
        </div>
    </div>
</div>

<div class="footer-margin">
    <footer class="page-footer blue fixed-bottom scrolling-footer" id="navbar">

        <ul class="list-unstyled list-inline text-center">
            <li class="list-inline-item">

                <a href="/" class="mx-1">
                    <button class="btn btn-secondary btn-lg nav-btn">
                        Home
                        <br />
                        <i class="fas fa-paw fa-5px"></i>
                    </button>
                </a>
            </li>
            <li class="list-inline-item">
                <a href="/posts" class="mx-1">
                    <button class="btn btn-secondary btn-lg nav-btn">
                        New Post
                        <br />
                        <i class="fas fa-pen-fancy fa-5px"></i>
                    </button>
                </a>
            </li>
            <li class="list-inline-item">
                <a href="/allposts" class="mx-1">
                    <button class="btn btn-secondary btn-lg nav-btn">
                        View All Posts
                        <br />
                        <i class="fas fa-bone fa-5px"></i>
                    </button>
                </a>
            </li>
            <li class="list-inline-item">
                <a href="/lostdogs" class="mx-1">
                    <button class="btn btn-secondary btn-lg nav-btn">
                        Lost Dogs
                        <br />
                        <i class="fas fa-location-arrow fa-5px"></i>
                    </button>
                </a>
            </li>
        </ul>
    </footer>
</div>